<html lang="en">

<head>
    <!-- <link href="https://vjs.zencdn.net/7.0.5/video-js.css" rel="stylesheet"> -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
</head>
<style>
    #video {
        position: absolute;
        top: 0px;
        right: 0px;
        bottom: 0px;
        left: 0px;
        max-height: 100%;
        max-width: 100%;
        margin: auto;
        object-fit: contain;
    }
</style>

<body id="body" style="background-color: rgb(0, 0, 0);display: block;">
    <script>
        let src = "<%= src %>";
        if(src.includes('bilutv')){
            $('#body').append('<video autoplay controls id="video"><source src="<%= src %>" type="video/mp4"></video>');
        } else  {
            $('#body').append('<iframe width="100%" height="97%" style="border: none" src="<%= src %>" allowfullscreen="true" webkitallowfullscreen="true"></iframe>');
        }
    </script>
</body>
</html>